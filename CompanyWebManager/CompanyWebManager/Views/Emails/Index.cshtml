@using Org.BouncyCastle.Crypto.Tls
@model IEnumerable<CompanyWebManager.Models.Email>

@{
    ViewData["Title"] = "Index";
}


<h2>Index</h2>

<p>
    <button asp-action="Create" type="button" class="btn">Utworz wiadomosc`</button>
</p>
<p>
    <button onclick="show('#loginForm');" class="btn">Osdbierz wiadomosci</button>
</p>

<form  asp-action="ReceiveEmails" class="hidden" id="loginForm">
    <div class="form-group">
        <label for="login">Adres email</label>
        <input type="email" class="form-control" id="login" name="login" aria-describedby="emailHelp" placeholder="Email">
        <small id="emailHelp" class="form-text text-muted">Pamietaj, ze konto MUSI byc z domeny gmail.com</small>
    </div>
    <div class="form-group">
        <label for="pass">Haslo</label>
        <input type="password" class="form-control" id="pass" name="pass" placeholder="Haslo">
    </div>
    <button type="submit" class="btn btn-success">Odbierz</button>
</form>


@if (Model.Any(x => x.Saved == false))
{
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceivedTime)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        
        @{ int i = 0;}
        @foreach (var item in Model.Where(x => x.Saved == false))
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MessageToDisplay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceivedTime)
                </td>
                <td>
                    <button type="button" data-request-url="@Url.Action("SaveEmail")" onclick="sendRequestToController($(this));" class="btn btn-success">Zapisz do bazy</button>
                    @*<button type="button" asp-controller="Emails" asp-action="OpenEmail" data-request-url="@Url.Action("OpenEmailAsync")" onclick="sendRequestToController($(this));" class="btn btn-success">Otworz</button>*@
                    <a class="btn btn-success" asp-action="OpenEmailAsync" asp-route-id="@(i)" asp-route-saved="false">Details</a>
                </td>
            </tr>
            i++;
        }
        </tbody>
    </table>
}

@if (Model.Any(x => x.Saved == true))
{
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            <th>
                @Html.DisplayNameFor(model => model.ReceivedTime)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Where(x => x.Saved == true))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceivedTime)
                </td>
                <td>
                    <button type="button" asp-action="Delete" asp-controller="Emails" asp-route-id="@item.ID" class="btn btn-success">Usun z bazy</button>
                    <a class="btn btn-success" asp-action="OpenEmailAsync" asp-route-id="@item.ID" asp-route-saved="true">Details</a>
                    <a asp-action="OpenEmailAsync" asp-route-id="@item.ID" asp-route-saved="true">Details2</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
    

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/emails.js"></script>
}
