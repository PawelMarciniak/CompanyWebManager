@model CompanyWebManager.Models.Email

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Email</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Receiver" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Receiver" class="form-control" />
                <span asp-validation-for="Receiver" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CarbonCopy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CarbonCopy" class="form-control" />
                <span asp-validation-for="CarbonCopy" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BlindCarbonCopy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BlindCarbonCopy" class="form-control" />
                <span asp-validation-for="BlindCarbonCopy" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Subject" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Message" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Wroc do listy wiadomosci</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
