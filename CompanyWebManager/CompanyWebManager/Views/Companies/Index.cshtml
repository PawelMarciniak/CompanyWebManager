@model CompanyWebManager.Models.ViewModels.CompaniesListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Firmy</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Utworz firme</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Trade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.CompanyEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Street)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Town)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.PostalCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Voivodeship)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Country)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Companies) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Town)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VoivodeshipName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ID">Edytuj</a> 
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ID">Szczegoly</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Usun</a>
            </td>
        </tr>
}
    </tbody>
</table>
