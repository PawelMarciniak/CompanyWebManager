@model CompanyWebManager.Models.ViewModels.ProductsOfTransactions

@{
    ViewData["Title"] = "Szczegoly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Szczegoly</h2>

<div>
    <h4>Transakcja</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TransactionDescriptionID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TransDescDesc)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TransDescDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>
</div>


<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductUnits)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitNetPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitGrossPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NetPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrossPrice)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Transactions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductUnits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitNetPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitGrossPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrossPrice)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>


<div>
    <a asp-action="Index">Back to List</a>
</div>
