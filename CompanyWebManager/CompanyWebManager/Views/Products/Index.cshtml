@model CompanyWebManager.Models.ViewModels.ProductsListViewModel

@{
    ViewData["Title"] = "Lista Produktow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista Produktow</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Stworz produkt</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.NetPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.GrossPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Quantity)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrossPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ID">Edytuj</a> 
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ID">Szczegoly</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Usun</a>
            </td>
        </tr>
}
    </tbody>
</table>
