@model CompanyWebManager.Models.ViewModels.EmployeesListViewModel

@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pracownicy</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Stworz</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Salary)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employees) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ID">Edytuj</a> 
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ID">Szczegoly</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Usun</a>
            </td>
        </tr>
}
    </tbody>
</table>
