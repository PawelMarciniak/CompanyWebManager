@model CompanyWebManager.Models.ViewModels.ClientsListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.ClientEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Street)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Town)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.PostalCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Voivodeship)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Headers.Country)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Clients) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Town)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VoivodeshipName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
